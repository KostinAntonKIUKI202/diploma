@{
}
<link rel="stylesheet" href="~/css/creatingViews.css" />
<h1 class="title">Змінити робітника</h1>
<form class="div_form" method="post" asp-action="Edit">
    <input type="hidden" value="StaffId" id="StaffId" />
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="FirstName">Ім'я</label>
        <input class="in_form_div__input" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="SecondName">Фамілія</label>
        <input class="in_form_div__input" asp-for="SecondName" />
        <span asp-validation-for="SecondName" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="JobTitle.JobTitleName">Посада</label>
        <input class="in_form_div__input" asp-for="JobTitle.JobTitleName" />
        <span asp-validation-for="JobTitle.JobTitleName" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="FactoryId">ID підприємства</label>
        <input class="in_form_div__input" asp-for="FactoryId" />
        <span asp-validation-for="FactoryId" class="text-danger"></span>
    </div>
    <button type="submit">Змінити</button>
</form>
