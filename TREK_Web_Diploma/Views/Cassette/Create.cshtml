<link rel="stylesheet" href="~/css/creatingViews.css" />
<h1>Додати касету</h1>
<form class="div_form" method="post" asp-action="Create">
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="CassetteName">Назва та модель</label>
        <input class="in_form_div__input" asp-for="CassetteName" />
        <span asp-validation-for="CassetteName" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="CassetteQuantity">Кількість на складі</label>
        <input class="in_form_div__input" asp-for="CassetteQuantity" />
        <span asp-validation-for="CassetteQuantity" class="text-danger"></span>
    </div>
    <button type="submit">Додати</button>
</form>
