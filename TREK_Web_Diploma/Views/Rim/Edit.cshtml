@{
}
<link rel="stylesheet" href="~/css/creatingViews.css" />
<h1>Змінити обода</h1>
<form class="div_form" method="post" asp-action="Edit">
    <input type="hidden" value="RimId" id="RimId" />
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="RimName">Назва та модель</label>
        <input class="in_form_div__input" asp-for="RimName" />
        <span asp-validation-for="RimName" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="RimDescription">Опис</label>
        <input class="in_form_div__input" asp-for="RimDescription" />
        <span asp-validation-for="RimDescription" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="RimQuantity">Кількість на складі</label>
        <input class="in_form_div__input" asp-for="RimQuantity" />
        <span asp-validation-for="RimQuantity" class="text-danger"></span>
    </div>
    <button type="submit">Змінити</button>
</form>
