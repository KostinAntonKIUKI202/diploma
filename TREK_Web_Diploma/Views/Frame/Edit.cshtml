@{
}
<link rel="stylesheet" href="~/css/creatingViews.css" />
<h1>Змінити раму</h1>
<form class="div_form" method="post" asp-action="Edit">
    <input type="hidden" value="FrameId" id="FrameId" />
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="FrameName">Назва та модель</label>
        <input class="in_form_div__input" asp-for="FrameName" />
        <span asp-validation-for="FrameName" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="FrameDescription">Опис</label>
        <input class="in_form_div__input" asp-for="FrameDescription" />
        <span asp-validation-for="FrameDescription" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="FrameQuantity">Кількість на складі</label>
        <input class="in_form_div__input" asp-for="FrameQuantity" />
        <span asp-validation-for="FrameQuantity" class="text-danger"></span>
    </div>
    <button type="submit">Змінити</button>
</form>