@{
}

<link rel="stylesheet" href="~/css/creatingViews.css" />
<h1>Додати вилку та амортизацію</h1>
<form class="div_form" method="post" asp-action="Create">
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="ForkName">Назва та модель</label>
        <input class="in_form_div__input" asp-for="ForkName" />
        <span asp-validation-for="ForkName" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="ForkDescription">Опис</label>
        <input class="in_form_div__input" asp-for="ForkDescription" />
        <span asp-validation-for="ForkDescription" class="text-danger"></span>
    </div>
    <div class="in_form_div">
        <label class="in_form_div__label" asp-for="ForkQuantity">Кількість на складі</label>
        <input class="in_form_div__input" asp-for="ForkQuantity" />
        <span asp-validation-for="ForkQuantity" class="text-danger"></span>
    </div>
    <button type="submit">Додати</button>
</form>